/* pages/childStore/index/index.wxss */
page{background: #EFF3F6}
.Me{
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 180rpx;
  background: #fff;
  margin-bottom: 16rpx;
}
.Me>view:nth-child(1) image{width: 100rpx;height: 100rpx;margin-right: 22rpx}
.Me>view:nth-child(2){width: calc(100% - 312rpx);margin-right: 10rpx;color: #333;font-size: 28rpx}
.Me>view:nth-child(3){width:180rpx;height: 60rpx;border:1rpx solid #03A9F5;border-radius: 10rpx;text-align: center;line-height: 60rpx;font-size: 24rpx;color: #03A9F5}
.Me>view:nth-child(3) image{width: 19rpx;height: 19rpx}

.content{padding-bottom: 120rpx}


.player{
  z-index: 50;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 120rpx;
  background: #fff;
  border-radius:20px 20px 0px 0px;
  box-shadow:1px 1px 30px rgba(87,108,135,0.15);  
  padding: 18rpx 30rpx;
  box-sizing: border-box;
  width: 100%
}
.player>view:nth-child(1){overflow: hidden;width: 84rpx;margin-right: 16rpx;height: 84rpx;overflow: hidden;border-radius: 10rpx}
.player>view:nth-child(1) image{width: 84rpx;min-height: 84rpx}
.player>view:nth-child(2){font-size: 28rpx;color: #333;width: 432rpx;margin-right: 10rpx}
.player>view:nth-child(3){width: 53rpx;margin-right: 60rpx}
.player>view:nth-child(3) image{width: 53rpx;height: 53rpx}
.player>view:nth-child(4){width: 55rpx;}
.player>view:nth-child(4) image{width: 55rpx;height: 46rpx}