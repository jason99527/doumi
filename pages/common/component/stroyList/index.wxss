/* pages/common/component/stroyList/index.wxss */
.Item{
  width: 100%;
  height: 170rpx;
  margin: 0 auto;
  background: #fff;
  box-shadow:19px 0px 60px rgba(153,153,153,0.15);
  border-radius: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: stretch;
  padding: 35rpx 10rpx;
  box-sizing: border-box;
  margin-bottom: 16rpx;
}
.HomeImg{
  width: 100rpx;
  height: 100rpx;
  position: relative;
  overflow: hidden;   
  margin-right: 26rpx;
  border-radius: 10rpx;
}
.HomeImg image{
  width: 100rpx;
  min-height: 100rpx; 
}
.HomeImg view{
  width:54rpx;
  height:24rpx;
  background:rgba(255,228,17,1);
  border-radius: 18px 0 0 18px;
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 18rpx;
  text-align: center;
  line-height: 24rpx
}
.Item-data{width: 344rpx}
.Item-data>view:nth-child(1){color: #333;font-size: 32rpx;width: 100%}
.Item-data>view:nth-child(2){color: #999;font-size: 28rpx;}
.Item-data>view:nth-child(2) text{display: inline-block;width: calc(100% - 35rpx)}
.Item-data>view:nth-child(2) image{width: 23rpx;height: 25rpx;margin-right: 8rpx;margin-top: 29rpx;
  /* position: relative;top: -8rpx; */
  }
.Item-Label{
  width: 220rpx;
  height: 100%
}
.Item-Label view{
  height: 44rpx;
  border-radius: 22px;
  background: #DFF4FC;
  color: #6295CF;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  float: right;
  box-sizing: border-box;
  line-height: 1;
  max-width:95rpx
}
.Item-Label view:nth-child(1),.Item-Label view:nth-child(2){
  margin-bottom: 10rpx
}
.Item-Label view:nth-child(Odd){
  margin-left: 10rpx;
}

.font-hidden{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}