/* pages/common/record/record.wxss */
.record{padding: 0 46rpx}
.content{
  margin: 207rpx auto 242rpx;
  position: relative;
  text-align: center;
  width: 485rpx;
}
.content image{
  width: 485rpx;
}
.content text{
  position: absolute;
  width: 277rpx;
  display: block;
  top: 252rpx;
  font-size: 72rpx;
  color: #333;
  left: 91rpx
  /* margin: auto;
  left: 0;
  right: 0 */
}
.banner{
  display: flex;
  justify-content: flex-start;
  align-items: center
}
.icon{
  width: 110rpx; 
  text-align: center;
  margin-left: 73rpx;
  opacity: 1;
  transition: all .3s;
  position: relative;
  left: 0
}
.icon:nth-child(1){margin: 0}
.icon image{
  width: 110rpx;height: 110rpx
}
.icon view{
  color: #333;
  font-size: 24rpx;
  margin-top: 26rpx
}

.hidden{
  opacity: 0
}
.center{
  left: -90rpx;
}

.childStore .CPM{
  opacity: 1;
  z-index: 5
}
.CPM{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0;
  transition: all .3s;
  z-index: -1;
}
.Mask{
  width: 100%;height: 100%;background: rgba(0,0,0,.5);position: absolute
}
.CPM-content{
  width: 622rpx;
  height: 566rpx;
  background: #fff;
  padding: 20rpx 11rpx;
  box-sizing: border-box;
  margin: 259rpx auto 0;
  position: relative;
  z-index: 5;
  text-align: center;
  border-radius: 10rpx;
}
.title{font-size: 32rpx;color: #333;margin: 46rpx 0 49rpx;font-weight: 600}
.CPM-content image{width: 100%;height: 180rpx}
.CPM-content input{width: 320rpx;height: 40rpx;margin: 0 auto;border-bottom: 1rpx solid #666;margin-bottom: 90rpx;font-size: 30rpx;color: #333;text-align: center}
.complete{
  width:550rpx;
  height:61rpx;
  background:rgba(3,169,245,1);
  border-radius:9rpx;
  margin: 0 auto;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 61rpx
}

.childStore .content{margin-bottom: 110rpx}
.startButton{
  width: 360rpx;  
  height: 88rpx;
  margin: 60rpx auto 0
}
.startButton image{width: 100%;height: 88rpx}