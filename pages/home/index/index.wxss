/* pages/home/index/index.wxss */
#ContentBox{
  overflow-y: scroll;
  background: #FEFEFE!important;
  padding-bottom: 40rpx;
}
.TextOverflow{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
#Home{background:#FEFEFE!important;}
/*Head*/
.HomeSearch{
  height: 92rpx;
  text-align: center;
  background: linear-gradient(#03A9F5,#54C9FF)
}
.HomeSearchBox{
  width: 550rpx;
  position: relative;
  margin: 0 auto;
  padding-top: 16rpx;
}
.HomeSearchBox>image{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 30rpx;
  top: 32rpx;
  z-index: 5
}
.HomeSearchBox>input{
  height: 60rpx;
  width: 100%;
  background: #fff;
  border-radius: 30px;
  text-align: left;
  padding-left: 82rpx;
  font-size: 26rpx;
  box-sizing: border-box
}
/*Item*/
.HomeHotStory .StoryTop{
  background: #fff;
}
.StoryTop{
  top: 91rpx;
  border-bottom: 1rpx solid #eee;
  overflow: hidden;
  padding: 0 37rpx;
  line-height: 91rpx;
}
.StoryTop>text{
  font-size: 28rpx;
  color: #666;
  font-weight: 300;
  width:50%;
  display: block;
  float: left
}
.StoryMore{
  float: right;
  width: 50%;
  text-align: right
}
.StoryMore text{
  font-size: 24rpx;
  color: #ccc
}
.StoryMore image{
  width: 16rpx;
  height: 28rpx;
  margin-left: 12rpx;
  position: relative;
  top: 5rpx;
}
.StoryBottom{
  padding: 21rpx 30rpx 38rpx;
   overflow: hidden; 
}
.StroyItem{
  border-radius:10px;
  width: 340rpx;
  height: 340rpx;
  position: relative;
  box-shadow:10px 1px 60px rgba(153,153,153,0.15);
  overflow: hidden;
  float: left;
  margin-bottom: 16rpx;
}
.StroyItem:nth-child(2n){
  margin-left: 10rpx;
}
.StroyItem .Item-Img{
  height: 255rpx;
  width: 100%;
  overflow: hidden;
}
.Item-Img image{width:100%;height: 100%}
.StroyItemBottom{
  padding: 0rpx 7rpx;
  overflow: hidden;
  margin-top: 12rpx;
}
.ItemText{
  width: 50%;
  float: left;
  line-height: 1;
}
.ItemText>text{
  color: #333;
  font-size: 28rpx;
  display:block;
  max-width:100%;
}
.ItemText>view{
  margin-top: 14rpx; 
  overflow: hidden
}
.ItemText>view>image{
  width: 15rpx;
  height: 17rpx;
  margin-right: 6rpx;
  float: left
}
.ItemText>view>text{
  color:#999;
  font-size:20rpx;
  display:block;
  max-width:calc(100% - 21rpx);
  float:left;
}
.ItemLabel{
  width: 50%;
  float: right;
}
.ItemLabel .Label{
  width: auto;
  min-width: 42rpx;
  padding: 0 10rpx;
  max-width: 78rpx;
  height: 28rpx;
  border: 1rpx solid #03A9F5;
  color: #03A9F5;
  font-size: 20rpx;
  text-align: center;
  line-height: 28rpx;
  float: right;
  border-radius: 14px;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.ItemLabel .Label:nth-child(Odd){margin-left: 8rpx}
.ItemLabel .Label:nth-child(2){margin-bottom: 8rpx}

.ItemType{
  position: absolute;
  top: 0;
  right: 0;
  background: #FFE411;
  border-radius:0px 10px 0px 10px;
  color: #000;
  font-size: 20rpx;
  height: 34rpx;
  width: 72rpx;
  line-height: 34rpx;
  text-align: center;
}