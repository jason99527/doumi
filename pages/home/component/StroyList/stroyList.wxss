/* pages/home/component/StroyList/stroyList.wxss */
.text-overflow{
  overflow: hidden;text-overflow: ellipsis;white-space:nowrap;
}
.List{
  height: 180rpx;
  border-radius:10px;
  box-shadow:19px 0px 60px rgba(153,153,153,0.15);
  margin-bottom: 16rpx;
  background: #fff
}
.ListBox{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.List>view{line-height: 1}
.TopLabel{width: 100%;height: 36rpx;margin-bottom: 20rpx}
.Label{width: 72rpx;height: 36rpx;border-radius:0px 18px 18px 18px;background: #FFE411;color: #333;font-size: 24rpx;text-align: center;line-height: 36rpx}
.TopLabel image{width: 18rpx;height: 22rpx;margin-top: 7rpx;}
.ListLeft{width: 100rpx;height: 100rpx;margin-right: 26rpx;overflow: hidden;border-radius: 10px;position: relative}
.ListLeft>view{
  width:54rpx;
  height:24rpx;
  background:rgba(255,228,17,1);
  border-radius: 18px 0 0 18px;
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 18rpx;
  text-align: center;
  line-height: 24rpx
}
.ListLeft image{width: 100rpx}
.ListMiddle{height: 100rpx;color: #333;font-size: 32rpx;width: 344rpx}
.ListMiddle>text{width: 100%;display: block;margin-bottom: 29rpx}
.ListMiddle>view{color: #999;font-size: 28rpx}
.ListMiddle>view>text{display: inline-block;width: calc(100% - 31rpx)}
.ListMiddle image{width: 23rpx;height: 25rpx;margin-right: 8rpx}
.ListRight{width: 220rpx;padding-right: 20rpx;box-sizing: border-box;height: 100rpx}
.ListRight>view{
  height: 44rpx;
  border-radius: 22px;
  background: #DFF4FC;
  color: #6295CF;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  float: right;
  box-sizing: border-box;
  line-height: 1;
  max-width: 95rpx
}
.ListRight>view:first-child{
  margin-bottom: 10rpx
}
.ListRight>view:nth-child(Odd){
  margin-left: 10rpx;
}