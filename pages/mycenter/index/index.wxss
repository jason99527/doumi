
/* pages/mycenter/index/index.wxss */
page{
  background:rgba(245,246,248,1);
}
.title{
  width: 750rpx;
  height:300rpx;
  display:flex;
  color:#fff;
  justify-content: space-between;
}
.bg{
  width: 750rpx;
  height: 300rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1
}
.user-img{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  border:5rpx solid white;
  overflow: hidden;
  margin-top: 35rpx;
  margin-left:35rpx
