<!--pages/childStore/index/index.wxml-->
<view class='box'>
  <view class='name'>收货人</view>
  <view class='input'>
    <input class='create-title' placeholder="{{username}}" bindinput="voteTitle"></input>
  </view>
</view>
<view class='box'>
  <view class='name'>联系电话</view>
  <view class='input'>
    <input class='create-title' placeholder="{{username}}" bindinput="voteTitle"></input>
  </view>
</view>
<view class='box'>
  <view class='name'>选择地区</view>
  <view class='input'>
    <picker  mode='region' value='{{region}}'  bindchange='bindPickerCity'>
        <view>
        {{region[0]}} {{region[1]}} {{region[2]}}
        </view>
    </picker>
  </view>
</view>
<view class='box'>
  <view class='name'>详细地址</view>
  <view class='input'>
    <input class='create-title' placeholder="{{username}}" bindinput="voteTitle"></input>
  </view>
</view>
<view class='button' bindtap='updata'>保存</view>
