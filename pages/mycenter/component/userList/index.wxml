
<!--pages/mycenter/component/userList/index.wxml-->
<view>
  <view class='individual' wx:for="{{list}}" wx:key='item.user_name'>
    <view class='box'>
        <view class='head-box'>
         <image src='{{item.header_url}}' class='header_img'></image>
        </view>
        <text>{{item.user_name}}</text>  
    </view>
    <view class='follow' wx:if="{{item.user_type=='1'}}">
      <image src='/images/right.png' class='icon-right'></image>
      已关注
    </view>
    <view class='follow' wx:elif="{{item.user_type=='2'}}">
      <image src='/images/mutual.png' class='icon-mutual'></image>
      互相关注
    </view>
     <view class='follow add' wx:else>
      <image src='/images/add.png' class='icon-mutual'></image>
       关注
    </view>
  </view>
</view>

